<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TaskAssignmentMapper">

    <resultMap type="TaskAssignment" id="TaskAssignmentResult">
        <result property="takeId"    column="take_id"    />
        <result property="orderId"    column="order_id"    />
        <result property="userId"    column="user_id"    />
        <result property="machineId"    column="machine_id"    />
        <result property="assignedDate"    column="assigned_date"    />
        <result property="isCompleted"    column="is_completed"    />
        <result property="remarks"    column="remarks"    />
        <result property="operationId"    column="operation_id"    />
        <result property="isStarted"    column="is_started"    />
    </resultMap>

    <sql id="selectTaskAssignmentVo">
        select take_id, order_id, user_id, machine_id, assigned_date, is_completed, remarks, operation_id, is_started from tb_task_assignment
    </sql>

    <select id="selectTaskAssignmentList" parameterType="TaskAssignment" resultMap="TaskAssignmentResult">
        <include refid="selectTaskAssignmentVo"/>
        <where>
            <if test="takeId != null "> and take_id = #{takeId}</if>
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="machineId != null "> and machine_id = #{machineId}</if>
            <if test="assignedDate != null "> and assigned_date = #{assignedDate}</if>
            <if test="isCompleted != null "> and is_completed = #{isCompleted}</if>
            <if test="remarks != null  and remarks != ''"> and remarks = #{remarks}</if>
            <if test="operationId != null "> and operation_id = #{operationId}</if>
            <if test="isStarted != null "> and is_started = #{isStarted}</if>
        </where>
    </select>

    <select id="selectTaskAssignmentByTakeId" parameterType="Long" resultMap="TaskAssignmentResult">
        <include refid="selectTaskAssignmentVo"/>
        where take_id = #{takeId}
    </select>

    <insert id="insertTaskAssignment" parameterType="TaskAssignment" useGeneratedKeys="true" keyProperty="takeId">
        insert into tb_task_assignment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="machineId != null">machine_id,</if>
            <if test="assignedDate != null">assigned_date,</if>
            <if test="isCompleted != null">is_completed,</if>
            <if test="remarks != null">remarks,</if>
            <if test="operationId != null">operation_id,</if>
            <if test="isStarted != null">is_started,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="machineId != null">#{machineId},</if>
            <if test="assignedDate != null">#{assignedDate},</if>
            <if test="isCompleted != null">#{isCompleted},</if>
            <if test="remarks != null">#{remarks},</if>
            <if test="operationId != null">#{operationId},</if>
            <if test="isStarted != null">#{isStarted},</if>
        </trim>
    </insert>

    <update id="updateTaskAssignment" parameterType="TaskAssignment">
        update tb_task_assignment
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="machineId != null">machine_id = #{machineId},</if>
            <if test="assignedDate != null">assigned_date = #{assignedDate},</if>
            <if test="isCompleted != null">is_completed = #{isCompleted},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
            <if test="operationId != null">operation_id = #{operationId},</if>
            <if test="isStarted != null">is_started = #{isStarted},</if>
        </trim>
        where take_id = #{takeId}
    </update>

    <delete id="deleteTaskAssignmentByTakeId" parameterType="Long">
        delete from tb_task_assignment where take_id = #{takeId}
    </delete>

    <delete id="deleteTaskAssignmentByTakeIds" parameterType="String">
        delete from tb_task_assignment where take_id in
        <foreach item="takeId" collection="array" open="(" separator="," close=")">
            #{takeId}
        </foreach>
    </delete>
</mapper>