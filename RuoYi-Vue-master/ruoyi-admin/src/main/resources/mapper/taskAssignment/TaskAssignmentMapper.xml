<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TaskAssignmentMapper">
    
    <resultMap type="TaskAssignment" id="TaskAssignmentResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="userId"    column="user_id"    />
        <result property="assignedDate"    column="assigned_date"    />
        <result property="status"    column="status"    />
        <result property="completedDate"    column="completed_date"    />
        <result property="remarks"    column="remarks"    />
    </resultMap>

    <sql id="selectTaskAssignmentVo">
        select id, order_id, user_id, assigned_date, status, completed_date, remarks from tb_task_assignments
    </sql>

    <select id="selectTaskAssignmentList" parameterType="TaskAssignment" resultMap="TaskAssignmentResult">
        <include refid="selectTaskAssignmentVo"/>
        <where>  
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="assignedDate != null "> and assigned_date = #{assignedDate}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="completedDate != null "> and completed_date = #{completedDate}</if>
            <if test="remarks != null  and remarks != ''"> and remarks = #{remarks}</if>
        </where>
    </select>
    
    <select id="selectTaskAssignmentById" parameterType="Long" resultMap="TaskAssignmentResult">
        <include refid="selectTaskAssignmentVo"/>
        where id = #{id}
    </select>

    <insert id="insertTaskAssignment" parameterType="TaskAssignment" useGeneratedKeys="true" keyProperty="id">
        insert into tb_task_assignments
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="assignedDate != null">assigned_date,</if>
            <if test="status != null">status,</if>
            <if test="completedDate != null">completed_date,</if>
            <if test="remarks != null">remarks,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="assignedDate != null">#{assignedDate},</if>
            <if test="status != null">#{status},</if>
            <if test="completedDate != null">#{completedDate},</if>
            <if test="remarks != null">#{remarks},</if>
         </trim>
    </insert>

    <update id="updateTaskAssignment" parameterType="TaskAssignment">
        update tb_task_assignments
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="assignedDate != null">assigned_date = #{assignedDate},</if>
            <if test="status != null">status = #{status},</if>
            <if test="completedDate != null">completed_date = #{completedDate},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTaskAssignmentById" parameterType="Long">
        delete from tb_task_assignments where id = #{id}
    </delete>

    <delete id="deleteTaskAssignmentByIds" parameterType="String">
        delete from tb_task_assignments where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>